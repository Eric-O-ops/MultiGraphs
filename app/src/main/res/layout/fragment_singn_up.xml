<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.sign.up.SignUpFragment">

    <EditText
        android:id="@+id/edit_registration"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/teal_700"
        android:hint="mail"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:text="registration"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/edit_registration"
        app:layout_constraintStart_toStartOf="@id/edit_registration"
        app:layout_constraintEnd_toEndOf="@id/edit_registration"/>

</androidx.constraintlayout.widget.ConstraintLayout>